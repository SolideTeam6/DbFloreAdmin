<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Lastname2</th>
      <th>Direccion</th>
      <th>Phone</th>
      <th>Birthdate</th>
      <th>Rfc</th>
      <th>Curp</th>
      <th>Profile</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.lastname %></td>
        <td><%= person.lastname2 %></td>
        <td><%= person.direccion %></td>
        <td><%= person.phone %></td>
        <td><%= person.birthdate %></td>
        <td><%= person.rfc %></td>
        <td><%= person.curp %></td>
        <td><%= person.profile %></td>
        <td><%= person.active %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

